<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/frame"
        android:weightSum="1">

        <TextView
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:id="@+id/day_icon"
            android:textColor="@color/textcolor"
            android:textAlignment="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:id="@+id/num_icon"
            android:layout_below="@+id/day_icon"
            android:layout_alignLeft="@+id/day_icon"
            android:layout_alignStart="@+id/day_icon"
            android:layout_marginTop="7dp"
            android:textColor="@color/textcolor"
            android:textStyle="bold"
            android:typeface="serif"
            android:textAlignment="center"
            android:textSize="22sp" />
        
        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/day_icon"
            android:layout_toEndOf="@+id/day_icon"
            android:layout_marginLeft="15dp"
            android:textColor="@color/textcolor"
            android:id="@+id/txt_content" />

    </RelativeLayout>
</RelativeLayout>